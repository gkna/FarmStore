<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.fourglabs.farmstore.PriceSummary"
    tools:showIn="@layout/activity_price_summary">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="100 egg prices on "
        android:id="@+id/headingText"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="20/02/2016"
        android:id="@+id/dateText"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/headingText"
        android:layout_toEndOf="@+id/headingText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Bangalore:"
        android:id="@+id/bangaloreTxt"
        android:layout_below="@+id/headingText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="54dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="360"
        android:id="@+id/bangalorePriceTxt"
        android:layout_alignBottom="@+id/bangaloreTxt"
        android:layout_toRightOf="@+id/headingText"
        android:layout_toEndOf="@+id/headingText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Chittoor:"
        android:id="@+id/chittoorTxt"
        android:layout_below="@+id/bangaloreTxt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="378"
        android:id="@+id/chittoorPrice"
        android:layout_below="@+id/bangalorePriceTxt"
        android:layout_alignLeft="@+id/bangalorePriceTxt"
        android:layout_alignStart="@+id/bangalorePriceTxt"
        android:paddingTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Chennai:"
        android:id="@+id/chennaiTxt"
        android:paddingTop="15dp"
        android:layout_below="@+id/chittoorTxt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="385"
        android:id="@+id/chennaiTxtView"
        android:paddingTop="15dp"
        android:layout_alignTop="@+id/chennaiTxt"
        android:layout_alignLeft="@+id/chittoorPrice"
        android:layout_alignStart="@+id/chittoorPrice" />
</RelativeLayout>
